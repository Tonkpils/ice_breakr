= form_tag @user do
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = label_tag :username
    %br
    = text_field_tag 'user[username]'
  .field
    = label_tag :latitude
    %br
    = text_field_tag 'location[latitude]'
  .field
    = label_tag :longitude
    %br
    = text_field_tag 'location[longitude]'

  .actions
    = submit_tag